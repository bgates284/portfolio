@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="GetDef" method="post">
    <input type="text" name="word" placeholder="Enter a word" required />
    <button type="submit">Get Definitions</button>
</form>

@if (ViewBag.Definitions != null && ViewBag.Definitions.Count > 0)
{
    <div class="mt-3">
        <h2>Definitions:</h2>
        <ul>
            @foreach (var def in ViewBag.Definitions)
            {
                <li>@def</li>
            }
        </ul>
    </div>
}


@if (ViewBag.People != null)
{
    <div class="mt-3">
        <h2>These are people from my Azure SQL Server Database that demonstrates basic usage of EntityFramework:</h2>
        <ul>
            @foreach (var person in (IEnumerable<Person>)ViewBag.People)
            {
                <li>@($"{person.FirstName} {person.LastName}: {person.Email}")</li>
            }
        </ul>
    </div>
}