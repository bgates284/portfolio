@model Portfolio.Models.Person
@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="GetDef" method="post">
    <input type="text" name="word" placeholder="Enter a word" required />
    <button type="submit">Get Definitions</button>
</form>

@if (ViewBag.Definitions != null && ViewBag.Definitions.Count > 0)
{
    <div class="mt-3">
        <h2>Definitions:</h2>
        <ul>
            @foreach (var def in ViewBag.Definitions)
            {
                <li>@def</li>
            }
        </ul>
    </div>
}

<h2>Sign Up</h2>

<form asp-action="SignUp" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>


@if (ViewBag.People != null)
{
    <div class="mt-3">
        <h2>These are people from my Azure SQL Server Database that demonstrates basic usage of EntityFramework:</h2>
        <ul>
            @foreach (var person in (IEnumerable<Person>)ViewBag.People)
            {
                <li>@($"{person.FirstName} {person.LastName}: {person.Email}    |   {person.PhoneNumber}")</li>
            }
        </ul>
    </div>
}