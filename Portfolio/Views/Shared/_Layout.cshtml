<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Portfolio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Portfolio - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>

    <div id="audioContainer" style="position: fixed; bottom: 10px; right: 10px; z-index: 9999; background: white; padding: 10px; border-radius: 10px; box-shadow: 0 0 5px #ccc;">
        <audio controls autoplay id="audioPlayer">
            <source id="audioSource" src="https://icecast.radiofrance.fr/fip-midfi.mp3" type="audio/mpeg">
            Your browser does not support the audio element.
        </audio>
        <select id="stationSelector" class="form-select mt-2">
            
            <option value="https://live.amperwave.net/direct/audacy-winshd2aac-imc">Alt 92.3 NYC</option>
            <option value="https://playerservices.streamtheworld.com/api/livestream-redirect/WQHTFM.mp3">Hot 97.1 NYC</option>
            <option value="https://fm939.wnyc.org/wnycfm.aac">WNYC 93.9 FM NYC</option>
            <option value="https://stream.wqxr.org/wqxr.aac">WQXR 105.9 FM NYC</option>
            <option value="https://q2stream.wqxr.org/q2.aac">New Sounds NYC</option>
            <option value="https://opera-stream.wqxr.org/operavore.aac">Operavore NYC</option>
            <option value="https://streams.radio.co/sd1bcd1376/listen#.mp3">One Link Radio NYC</option>

            <option value="https://ice-the.musicradio.com/HeartUKMP3">Heart Radio UK</option>
            <option value="http://edge-bauerall-01-gos2.sharp-stream.com/absoluteradiohigh.aac">Absolute Radio London</option>
            <option value="https://edge-bauerall-01-gos2.sharp-stream.com/hits.aac">Hits Radio</option>
            <option value="https://radio.virginradio.co.uk/stream">Virgin Radio</option>
            <option value="http://ep256.hostingradio.ru:8052/europaplus256.mp3">Радио Европа Плюс - Москва 106.2 FM</option>
            <option value="https://icecast.radiofrance.fr/francemusiquelajazz-hifi.aac">Jazz France</option>
            
            
            @* <option value=""></option>  *@
        </select>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        window.addEventListener('DOMContentLoaded', function () {
            const selector = document.getElementById('stationSelector');
            const audio = document.getElementById('audioPlayer');
            const source = document.getElementById('audioSource');

            selector.addEventListener('change', function () {
                source.src = this.value;
                audio.load();
                audio.play();
            });
        });
    </script>
</body>
</html>


